<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.INNOWAVE" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.INNOWAVE" parent="Base.Theme.INNOWAVE" />

    <style name="Text_Title" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">32sp</item>
    </style>

    <style name="Text_SubTitle">
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="Text_Content">
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="Text_SubContent">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="Text_Button_L">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text_Button_M">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text_EditText">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FlashTimeBox">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_time_box</item>
        <item name="android:textColor">#0D3E5E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SortOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DDD</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>