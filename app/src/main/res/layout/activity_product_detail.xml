<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductDetailActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/silver_color"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Back button -->
        <ImageView
            android:id="@+id/icBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:scaleType="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Cart button -->
        <ImageView
            android:id="@+id/icCart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cart"
            android:contentDescription="Cart"
            android:scaleType="center"
            />

        <!-- Home button -->
        <ImageView
            android:id="@+id/icHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:scaleType="center"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Nội dung trang -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Ảnh sản pẩm -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/imvProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_launcher_foreground" />

                    <ImageButton
                        android:id="@+id/btnPrev"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_search"
                        android:src="@drawable/ic_left_arrow"
                        android:layout_gravity="center_vertical|start"
                        android:contentDescription="Prev" />

                    <ImageButton
                        android:id="@+id/btnNext"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_search"
                        android:src="@drawable/ic_left_arrow"
                        android:scaleX="-1"
                        android:layout_gravity="center_vertical|end"
                        android:contentDescription="Next" />
                </FrameLayout>

                <!-- Tên sản phẩm -->
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tai nghe INNOWAVE_WLHP-0100"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="8dp" />

                <!-- Màu sắc -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_color"
                        style="@style/Text_Content"
                        android:layout_marginTop="4dp" />
                    <TextView
                        android:id="@+id/product_color"
                        android:layout_width="wrap_content"
                        style="@style/Text_Content"
                        android:layout_height="wrap_content"
                        android:text=" Đen"
                        android:textSize="15sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- List button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Đen"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="@drawable/bg_search"
                        android:layout_marginEnd="4dp" />


                </LinearLayout>

                <!-- Giá -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="đ 305.000"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:textColor="@color/primary_color"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvOriginalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Text_Content"
                            android:text="đ 509.000"
                            android:textColor="@color/grey_color"/>

                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-40%"
                            android:textColor="@color/error_color"
                            style="@style/Text_Content"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/tint_color5"/>

                <!-- Thông số kỹ thuật -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/technical_specification"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TableLayout
                    android:id="@+id/technical_specification_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/silver_color">
                </TableLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/tint_color5"/>

                <!-- Đánh giá sản phẩm -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <!-- Bên trái: điểm, sao, tiêu đề, số lượng -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/rating_average"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="4.8"
                            style="@style/Text_Content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"
                            app:tint="@color/warning_color"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/product_review"
                            style="@style/Text_Content"
                            android:textSize="16sp"
                            android:textColor="#222" />
                        <TextView
                            android:id="@+id/rating_count"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="(83)"
                            android:textSize="16sp"
                            android:textColor="#222" />
                    </LinearLayout>

                    <!-- Bên phải: Xem tất cả + icon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/view_all"
                            style="@style/Text_Content"
                            android:textSize="14sp" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_next_dark"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Danh sách bình luận -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">
                    <ListView
                        android:id="@+id/lvComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/tint_color5"/>

                <!-- Sản phẩm liên quan -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_relevant"
                    style="@style/Text_Content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- Bottom bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/add_to_cart"
            style="@style/Text_Content"
            android:textColor="@color/primary_color"
            android:backgroundTint="@android:color/white"
            app:strokeColor="#023D5D"
            app:strokeWidth="1dp"
            app:cornerRadius="4dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuyNow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/buy_now"
            android:textColor="@android:color/white"
            style="@style/Text_Content"
            android:backgroundTint="@color/primary_color"
            app:cornerRadius="4dp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>