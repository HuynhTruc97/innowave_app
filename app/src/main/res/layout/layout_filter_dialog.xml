<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Tiêu đề và nút thoát -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnCancel"
            android:src="@drawable/ic_cancel"
            android:contentDescription="Close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/Text_Content"
            android:fontFamily="@font/nunito_extra_bold"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            style="@style/Text_Content"
            android:padding="8dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Khoảng giá -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_range"
        style="@style/Text_Content"
        android:fontFamily="@font/nunito_bold"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/etMinPrice"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="@string/min_price_hint"
            android:inputType="number"
            android:background="@drawable/bg_search"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="18sp"
            android:textColor="#222" />
        <EditText
            android:id="@+id/etMaxPrice"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="@string/max_price_hint"
            android:inputType="number"
            android:background="@drawable/bg_search"
            android:padding="8dp"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Phân loại tai nghe -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_sort"
        android:textSize="18sp"
        style="@style/Text_Content"
        android:fontFamily="@font/nunito_bold"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWLHP"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/wlhp"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:strokeColor="#BDBDBD"
            app:strokeWidth="1dp"
            android:backgroundTint="#FFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWLEP"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/wlep"
            android:textAllCaps="false"
            android:textColor="#666"
            app:cornerRadius="12dp"
            app:strokeColor="#BDBDBD"
            app:strokeWidth="1dp"
            android:backgroundTint="#FFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWHP"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:fontFamily="@font/nunito_medium"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/whp"
            android:textAllCaps="false"
            android:textColor="#666"
            app:cornerRadius="12dp"
            app:strokeColor="#BDBDBD"
            app:strokeWidth="1dp"
            android:backgroundTint="#FFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWEP"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/wep"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_medium"
            android:textColor="#666"
            app:cornerRadius="12dp"
            app:strokeColor="#BDBDBD"
            app:strokeWidth="1dp"
            android:backgroundTint="#FFF" />
    </GridLayout>

    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/apply"
        android:fontFamily="@font/nunito_medium"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary_color"
        android:layout_marginTop="24dp"
        android:textStyle="bold" />

</LinearLayout>
