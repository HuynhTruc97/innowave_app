<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_user"
            android:background="@drawable/bg_search"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:clipToOutline="true" />

        <!-- Thông tin người dùng và badge -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương Ny"
                    style="@style/Text_Content"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26/02/2025"
                    style="@style/Text_Content"
                    android:textSize="12sp"
                    android:textColor="#9794A0"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/tick_light"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    style="@style/Text_Content"
                    android:id="@+id/tvBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã mua tại INNOWAVE"
                    android:textColor="@color/success_color"
                    android:layout_marginStart="6dp"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <!-- sao -->
        <LinearLayout
            android:id="@+id/numb_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star"
                app:tint="@color/warning_color" />


        </LinearLayout>
    </LinearLayout>

    <!-- Nội dung review -->
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Text_Content"
        android:text="Âm bass mạnh, chống ồn tốt giúp tập trung làm việc và tận hưởng âm nhạc..."
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp" />

</LinearLayout> 